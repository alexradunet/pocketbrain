# =============================================================================
# PocketBrain Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# =============================================================================

# -----------------------------------------------------------------------------
# AI PROVIDER
# -----------------------------------------------------------------------------
# Provider: "kronk" (local), "anthropic", "openai", "google", or any OpenAI-compatible endpoint.
PROVIDER=kronk

# API key for your chosen provider. Not required for "kronk".
API_KEY=

# Model identifier (e.g. claude-sonnet-4-20250514, gpt-4o, gemini-2.0-flash).
# For "kronk", set this to a model from the Kronk catalog.
MODEL=

# -----------------------------------------------------------------------------
# DATA PATH
# -----------------------------------------------------------------------------
# Where to store persistent data (SQLite DB, WhatsApp auth, workspace files).
# Default: .data (relative to repository root).
DATA_DIR=.data

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------
APP_NAME=pocketbrain
LOG_LEVEL=info
HEARTBEAT_INTERVAL_MINUTES=30

# -----------------------------------------------------------------------------
# WHATSAPP (whatsmeow)
# -----------------------------------------------------------------------------
ENABLE_WHATSAPP=false

# WhatsApp auth/session files stored here (default: DATA_DIR/whatsapp-auth).
# WHATSAPP_AUTH_DIR=.data/whatsapp-auth

# Security: token for /pair command to whitelist users.
WHITELIST_PAIR_TOKEN=

# /pair abuse protection (per WhatsApp JID).
WHATSAPP_PAIR_MAX_FAILURES=5
WHATSAPP_PAIR_FAILURE_WINDOW_MS=300000
WHATSAPP_PAIR_BLOCK_DURATION_MS=900000

# Comma-separated phone numbers to auto-whitelist (digits only or any format).
# Example: WHATSAPP_WHITELIST_NUMBERS=15551234567,+44 7700 900123
WHATSAPP_WHITELIST_NUMBERS=

# -----------------------------------------------------------------------------
# WORKSPACE (file operations exposed to AI via tools)
# -----------------------------------------------------------------------------
WORKSPACE_ENABLED=true
# WORKSPACE_PATH=.data/workspace

# -----------------------------------------------------------------------------
# TAILDRIVE (WebDAV file sharing via Tailscale)
# -----------------------------------------------------------------------------
TAILDRIVE_ENABLED=false
TAILDRIVE_SHARE_NAME=workspace
TAILDRIVE_AUTO_SHARE=true

# -----------------------------------------------------------------------------
# EMBEDDED TAILSCALE (tsnet)
# -----------------------------------------------------------------------------
TAILSCALE_ENABLED=false
# Get your auth key from https://login.tailscale.com/admin/settings/keys
TS_AUTHKEY=
TS_HOSTNAME=pocketbrain
TS_STATE_DIR=.data/tsnet
