{
  "name": "pocketbrain",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "setup": "bun src/cli/setup.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test tests/**/*.test.ts",
    "test:core": "bun test tests/core",
    "test:adapters": "bun test tests/adapters",
    "test:scheduler": "bun test tests/scheduler",
    "test:store": "bun test tests/store",
    "test:vault": "bun test tests/vault",
    "test:processes": "bun run test:core && bun run test:adapters && bun run test:scheduler && bun run test:store && bun run test:vault",
    "build": "bun build --compile --minify --outfile /tmp/pocketbrain-build ./src/index.ts",
    "test:opencode:e2e": "bun test tests/opencode.e2e.ts"
  },
  "dependencies": {
    "@opencode-ai/plugin": "1.1.53",
    "@opencode-ai/sdk": "1.1.53",
    "@whiskeysockets/baileys": "7.0.0-rc.9",
    "p-queue": "^8.1.0",
    "p-retry": "^6.2.1",
    "pino": "10.3.0",
    "qrcode-terminal": "0.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "bun-types": "^1.3.9",
    "typescript": "5.9.3"
  }
}
