{
  "name": "pocketbrain",
  "version": "1.0.0",
  "description": "Personal OpenCode assistant. Lightweight, secure, customizable.",
  "type": "module",
  "scripts": {
    "build": "bun run docker:build",
    "start": "bun run docker:up",
    "dev": "bun run dev:docker",
    "dev:docker": "docker compose --profile dev run --rm --service-ports dev",
    "test": "bun run docker:test",
    "docker:test": "docker compose --profile test run --rm test",
    "docker:build": "docker compose build pocketbrain",
    "docker:up": "docker compose up -d pocketbrain",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f pocketbrain",
    "e2e": "docker compose -f docker-compose.e2e.yml up --build --exit-code-from e2e-runner --abort-on-container-exit",
    "e2e:down": "docker compose -f docker-compose.e2e.yml down -v",
    "e2e:local": "docker compose -f docker-compose.e2e.yml -f docker-compose.e2e.local.yml up --build --exit-code-from e2e-runner --abort-on-container-exit",
    "e2e:local:down": "docker compose -f docker-compose.e2e.yml -f docker-compose.e2e.local.yml down -v"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@opencode-ai/sdk": "^1.2.10",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "cron-parser": "^5.5.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@ai-sdk/openai-compatible": "^0.2.0",
    "@types/bun": "latest",
    "@types/qrcode-terminal": "^0.12.2",
    "prettier": "^3.8.1",
    "typescript": "^5.7.0"
  }
}


